<configuration debug="true" scan="true">

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <!-- encoders are  by default assigned the type
         ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="STDERR" class="ch.qos.logback.core.ConsoleAppender">
      <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
          <level>ERROR</level>
      </filter>

      <encoder>
          <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
      </encoder>
      <target>System.err</target>
  </appender>

  <logger name="com.sibilantsolutions.iptools.util.DurationLoggingRunnable" level="INFO" />
  <logger name="com.sibilantsolutions.iptools.util.DurationLoggingCallable" level="INFO" />
  <logger name="com.sibilantsolutions.grison.driver.foscam.net.FoscamConnection" level="INFO" />

  <root level="WARN">
    <appender-ref ref="STDOUT" />
    <appender-ref ref="STDERR" />
  </root>

</configuration>
